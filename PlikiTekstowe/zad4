int main (){

    fstream wejscie;
    wejscie.open("Palindromy.txt",ios::in | ios::out);//ios::app - kiedy chcemy dopisac cos do juz istniejacego pliku
    fstream wyjscie;
    wyjscie.open("Ymordnilap.txt", ios::out);

    string wers;

    while(getline(wejscie,wers)){
        if(wers[0]=='â€ž'){
            reverse(wers.begin(),wers.end());
        }
        wyjscie<<wers<<endl;
    }

    wejscie.close();
    wyjscie.close();

return 0;
}
