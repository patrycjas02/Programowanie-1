#define _USE_MATH_DEFINES
#include <iostream>
#include <cmath>
#include <cstring>

using namespace std;

long long silnia(int n){

    if((n==1)||(n==2)){
        return n;
    }
    return silnia(n-2)*n;

}

int main (){

    cout<<"Podaj liczbe: "<<endl;

    int x;
    cin>>x;

    cout<<"Jej silnia podwojna: "<<silnia(x)<<endl;

return 0;
}
