#include <iostream>
#include <math.h>
#include <ctime>

using namespace std;

int main (){

    int n=7;
    int A[n][n];
    int x=0,y=0;

    srand(time(NULL));

    for (int i=0; i<n; i++){
        for (int j=0; j<n; j++){
            A[i][j]=rand()%20-10;
        }
    }
    int maks=A[0][0];

    for (int i=0; i<n; i++){
        for (int j=0; j<n; j++){
            cout<<A[i][j]<<" ";
            if(A[i][j]>maks){
                maks=A[i][j];
                x=i;
                y=j;
            }
        }
        cout<<endl;
    }

        cout<<"Najwiekszy element: "<<maks<<endl;
        cout<<"Wspolrzedne najwiekszego elementu: "<<x<<","<<y<<endl;
        cout<<"Sprawdzenie: "<<A[x][y]<<endl

return 0;
}
